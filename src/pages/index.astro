---
import Card from '../components/Card.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';
import Layout from '../layouts/PortfolioLayout.astro';

import { Image } from 'astro:assets';
import mitchell from '../images/mitchell.jpg'
import redesignThumbnail from "../images/gcc-redesign/final-deployed.png"

---

<Layout title="Mitchell's CS1300 Portfolio">
	<section class="introduction">
		<div class="introduction-text">
			<h2>Hey I'm Mitchell.</h2>
			<p>
				Full-stack software engineer with an eye for detail and quality. 
				Able to don many different hats, from designing web interfaces to implementing distributed communication processes. 
				Always learning.
			</p>
		</div>
		<Image alt="Headshot of Mitchell" src={mitchell} width={300} />
	</section>
	
	<section class="case-studies">
		<h2>Case Studies</h2>
		<ul role="list" class="case-studies-list">
			<CaseStudyCard
					href="/cs1300-portfolio/case-studies/responsive-redesign"
					title="Responsive Redesign"
					thumbnail={redesignThumbnail}
					summary="placeholder text: Non laborum velit Lorem culpa et ex quis exercitation excepteur ut ex pariatur sunt labore. Dolor incididunt culpa commodo minim proident aliqua irure cupidatat laborum aliquip cillum. Sunt ad elit anim sit ut eu. Nulla minim nostrud consectetur dolore adipisicing adipisicing officia aliquip ad ad magna."
					/>
			<Card
				href="/cs1300-portfolio/case-studies/development"
				title="Development"
				body="I created a React App to track welcome bonuses for bank accounts"
			/>
			<Card
				href="#"
				title="Placeholder"
				body="Placeholder"
			/>
		</ul>
	</section>
</Layout>

<style>
	main {
		margin: auto;
		width: 800px;
		max-width: calc(100% - 2rem);
	}

	.introduction {
		display: flex;
		align-items: center;
		margin: 3rem;
	}

	.introduction-text {
		margin: 0 2rem;
	}

	.case-studies {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	
	.case-studies-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
</style>