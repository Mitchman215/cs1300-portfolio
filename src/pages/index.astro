---
import Card from '../components/Card.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';
import Layout from '../layouts/BaseLayout.astro';

import redesignThumbnail from "../images/gcc-redesign/final-deployed.png"
---

<Layout title="Mitchell's CS1300 Portfolio">
  <main>
    <h1>Welcome to my portfolio!</h1>
    <ul role="list" class="case-studies">
			<CaseStudyCard
				href="/cs1300-portfolio/case-studies/responsive-redesign"
				title="Responsive Redesign"
				thumbnail={redesignThumbnail}
				summary="placeholder text: Non laborum velit Lorem culpa et ex quis exercitation excepteur ut ex pariatur sunt labore. Dolor incididunt culpa commodo minim proident aliqua irure cupidatat laborum aliquip cillum. Sunt ad elit anim sit ut eu. Nulla minim nostrud consectetur dolore adipisicing adipisicing officia aliquip ad ad magna."
				/>
			<Card
				href="/cs1300-portfolio/case-studies/responsive-redesign"
				title="Responsive Redesign"
				body="I redesigned an the home page for GCC to be more responsive"
			/>
			<Card
				href="/cs1300-portfolio/case-studies/development"
				title="Development"
				body="I created a React App to track welcome bonuses for bank accounts"
			/>
			<Card
				href="#"
				title="Placeholder"
				body="Placeholder"
			/>
		</ul>
  </main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: 
		/* color: white; */
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.case-studies {
		display: flex;
		flex-direction: column;
	}
</style>