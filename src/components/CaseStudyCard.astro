---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';


interface Props {
  study: CollectionEntry<'case-studies'>
}

const { name, role, thumbnail, summary } = Astro.props.study.data;

const href = `/cs1300-portfolio/case-studies/${Astro.props.study.slug}`
---

<li class="case-study-card">
	<a href={href}>
    {thumbnail && <Image src={thumbnail} alt={`${name} thumbnail`} />}
		<h3>
			{name}
			<span>&rarr;</span>
		</h3>
    <p class="role">{role}</p>
    <p>{summary}</p>
	</a>
</li>

<style>
  .case-study-card {
    width: 400px;
    background-color: var(--clr-blue);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    
    a {
      padding: 1rem;
      height: 100%;
      text-decoration: none;
      color: var(--clr-text);
    }
  }

  .role {
    font-size: var(--fs-300);
    font-style: italic;
  }
</style>