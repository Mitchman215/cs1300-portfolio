---
import Layout from "./PortfolioLayout.astro"

const { name, role, timeline, tools } = Astro.props.frontmatter;
---

<Layout title={`${name} Case Study`}>
  <main>
    <article>
      <slot />
    </article>

    <aside>
      <h2>Info</h2>
      <hr />
      <ul class="info-list">
        <li>
          <h3>Role</h3>
          <p>{role}</p>
        </li>

        <li>
          <h3>Timeline</h3>
          <p>{timeline}</p>
        </li>

        <li>
          <h3>Tools</h3>
          {tools.map((tool: string) => <p>{tool}</p>)}
        </li>
      </ul>
    </aside>
  </main>
</Layout>

<style is:global>
  main {
    display: flex;
  }

  aside {
    margin: 1rem;
    width: 20ch;
    .info-list {
      margin-top: 0.75rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }
  
  /* Markdown content styling */
  article {
    /* Spacing and layout */
    width: min(80ch, 100% - 4rem);
    margin-inline: auto;
    margin-bottom: 5rem;

    h1, h2 {
      margin-top: 1rem;
    }

    h3 {
      margin-top: 0.5rem;
    }

    p + p {
      margin-top: 0.375rem;
    }

    /* Typography */
    ul,
    ol {
      list-style: inside;
    }

    h1 {
      font-size: var(--fs-700);
    }
  
    /* Images */
    img {
      border: 1px solid;
      margin: 0 auto;
      /* Image captions */
      + em {
        font-size: 1rem;
        display: block;
        text-align: center;
        margin-bottom: 0.75rem;
      }
    }

    /* Tables */
    table {
      table-layout: fixed;
      width: 100%;
      border-collapse: collapse;
      border: 2px solid black;
    }
  
    th, td {
      padding: 5px 10px;
      border: 1px solid rgb(0, 0, 0, 0.6)
    }
  
    tbody td {
      text-align: center;
    }
  
    th, tbody tr:nth-child(even) {
      background-color: rgb(225, 225, 225, 0.8);
    }
  }

</style>